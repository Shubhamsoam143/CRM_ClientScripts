var Country = ZDK.Page.getField("Country_List").getValue();
log("Country : " + Country);

if (Country == "Kenya")
{
    var Mobile = ZDK.Page.getField("Mobile").getValue();
    var regex = /^\+254\s\d{9}$/;  // Check if it starts with +254, followed by a space, then 9 digits

    if (!regex.test(Mobile)) {
        ZDK.Page.showMessage("Please enter a valid mobile number.",{ type: 'warning' });
        return false;
    }
    return true;
}
else if (Country == "Uganda")
{
